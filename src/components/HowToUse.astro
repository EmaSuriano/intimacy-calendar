---
import { Calendar, MessageCircle, Heart } from 'lucide-astro';

interface Step {
  iconName: 'Calendar' | 'MessageCircle' | 'Heart';
  title: string;
  description: string;
}

interface Props {
  title?: string;
  steps: Step[];
}

const { title = "How to Use This Calendar", steps } = Astro.props;

const iconMap = {
  Calendar,
  MessageCircle,
  Heart
};
---

<div class="mb-16 bg-white rounded-2xl shadow-lg p-8 border border-gray-100">
  <h2 class="text-2xl font-bold text-gray-800 mb-6">
    {title}
  </h2>
  <div class="grid md:grid-cols-3 gap-6">
    {steps.map((step) => {
      const IconComponent = iconMap[step.iconName];
      return (
        <div class="text-center">
          <div class="w-12 h-12 bg-rose-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <IconComponent class="w-6 h-6 text-rose-600" />
          </div>
          <h3 class="font-semibold text-gray-800 mb-2">{step.title}</h3>
          <p class="text-sm text-gray-600">
            {step.description}
          </p>
        </div>
      );
    })}
  </div>
</div>
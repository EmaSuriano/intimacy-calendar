---
import { Check } from 'lucide-astro';

interface Props {
  dayNumber: number;
}

const { dayNumber } = Astro.props;
---

<div class="mt-8 text-center">
  <button
    type="button"
    class="inline-flex items-center px-6 py-3 bg-rose-600 text-white rounded-xl shadow-lg hover:shadow-xl hover:bg-rose-700 transition-all duration-300 font-semibold"
    data-mark-done-btn
    data-day-number={dayNumber}
    onclick={`window.completionTracker.toggleDayCompletion(${dayNumber})`}
  >
    <Check class="w-5 h-5 mr-2" />
    Mark as Done
  </button>
  
  <p class="text-sm text-gray-500 mt-2">
    Click to track your progress through the 30-day journey
  </p>
</div>
---
import { Check, Clock, Calendar } from 'lucide-astro';

interface Props {
  day: number;
  title: string;
  task: string;
  timeRequired: string;
  when: string;
}

const { day, title, task, timeRequired, when } = Astro.props;
---

<header class="bg-white rounded-2xl shadow-lg p-4 sm:p-6 lg:p-8 mb-8 border border-gray-100">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
    <div class="flex items-center gap-3 flex-wrap">
      <div class="text-xs sm:text-sm font-semibold text-rose-600 bg-rose-100 px-3 sm:px-4 py-2 rounded-full whitespace-nowrap">
        Day {day} of 30
      </div>
      <!-- Completion badge -->
      <div
        class="hidden items-center gap-2 text-xs sm:text-sm font-semibold text-green-700 bg-green-100 px-3 py-1 rounded-full"
        data-completion-badge
        data-day-number={day}
      >
        <Check class="w-4 h-4" />
        Completed
      </div>
    </div>
    <div class="w-full sm:w-32 bg-gray-200 rounded-full h-2">
      <div
        class="bg-gradient-to-r from-rose-400 to-pink-400 h-2 rounded-full"
        style={`width: ${(day / 30) * 100}%`}
      >
      </div>
    </div>
  </div>

  <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-800 mb-3 sm:mb-4">
    {title}
  </h1>

  <p class="text-base sm:text-lg text-gray-600 mb-4 sm:mb-6">
    {task}
  </p>

  <div class="grid sm:grid-cols-2 gap-4 sm:gap-6">
    <div class="flex items-center text-gray-700">
      <Clock class="w-5 h-5 mr-3 text-rose-500 flex-shrink-0" />
      <div class="min-w-0">
        <div class="font-semibold text-sm sm:text-base">Time Required</div>
        <div class="text-xs sm:text-sm text-gray-600">{timeRequired}</div>
      </div>
    </div>

    <div class="flex items-center text-gray-700">
      <Calendar class="w-5 h-5 mr-3 text-rose-500 flex-shrink-0" />
      <div class="min-w-0">
        <div class="font-semibold text-sm sm:text-base">Best Time</div>
        <div class="text-xs sm:text-sm text-gray-600">{when}</div>
      </div>
    </div>
  </div>
</header>
---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<header class="text-center mb-12">
  <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
    {title}
  </h1>
  <p class="text-xl text-gray-600 max-w-2xl mx-auto">
    {description}
  </p>
</header>